{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@parsers/*": ["../src/solana/*"],
      "@abi/*": ["../src/abi/*"]
    },
    "baseUrl": "."
  },
  "include": ["src", "../src/solana/slab.ts", "../src/solana/pda.ts", "../src/abi/encode.ts", "../src/abi/instructions.ts", "../src/abi/accounts.ts"]
}
